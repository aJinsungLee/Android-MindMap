<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_custom_dialog2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:text="Node Name"/>

            <EditText
                android:id="@+id/title2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:lines="1"
                android:scrollHorizontally="true"
                android:hint="Enter the node name"
                android:text=""/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Icon"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <com.github.johnkil.print.PrintView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/icon1"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:iconText="@string/ic_drive_file"
                    app:iconColor="#12558C"
                    app:iconFont="fonts/material-icon-font.ttf"
                    app:iconSize="25dp" />

                <com.github.johnkil.print.PrintView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/icon2"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:iconText="@string/ic_folder"
                    app:iconColor="#12558C"
                    app:iconFont="fonts/material-icon-font.ttf"
                    app:iconSize="25dp" />

                <com.github.johnkil.print.PrintView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/icon3"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:iconText="@string/ic_photo"
                    app:iconColor="#12558C"
                    app:iconFont="fonts/material-icon-font.ttf"
                    app:iconSize="25dp" />

                <com.github.johnkil.print.PrintView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/icon4"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:iconText="@string/ic_photo_library"
                    app:iconColor="#12558C"
                    app:iconFont="fonts/material-icon-font.ttf"
                    app:iconSize="25dp" />


                </LinearLayout>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Comment"/>

            <EditText
                android:id="@+id/comment2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lines="2"
                android:hint="Explain about this node"
                android:textColor="#009900"
                android:text=""/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
